<Window x:Class="FileWise.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource PrimaryTextBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition x:Name="ConsoleLogRow" Height="0"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource TitleBarBackgroundBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Settings" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TitleBarForegroundBrush}"/>
                <Button x:Name="ConsoleLogToggleButton" 
                        Grid.Column="1"
                        Content="Show Console Log" 
                        Padding="12,6"
                        Background="Transparent"
                        Foreground="{DynamicResource TitleBarForegroundBrush}"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ConsoleLogToggleButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="4,4,4,4" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource TitleBarButtonHoverBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <!-- API Configuration -->
                <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="API Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        
                        <!-- API Mode Selection -->
                        <TextBlock Text="API Mode" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <RadioButton x:Name="ApiKeyModeRadio" 
                                     Content="Use API Key (Gemini Cloud)" 
                                     GroupName="ApiMode"
                                     FontSize="12"
                                     Margin="0,0,0,8"
                                     Foreground="{DynamicResource PrimaryTextBrush}"
                                     Checked="ApiModeRadio_Checked"/>
                        <RadioButton x:Name="LocalhostModeRadio" 
                                     Content="Use Localhost (Local Model)" 
                                     GroupName="ApiMode"
                                     FontSize="12"
                                     Margin="0,0,0,15"
                                     Foreground="{DynamicResource PrimaryTextBrush}"
                                     Checked="ApiModeRadio_Checked"/>
                        
                        <!-- API Key Section -->
                        <StackPanel x:Name="ApiKeySection" Margin="0,0,0,10">
                            <TextBlock Text="API Key" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <PasswordBox x:Name="ApiKeyPasswordBox" 
                                         FontSize="12"
                                         Padding="8,6"
                                         Background="{DynamicResource CardBackgroundBrush}"
                                         BorderBrush="{DynamicResource BorderBrush}"
                                         BorderThickness="1"
                                         Foreground="{DynamicResource PrimaryTextBrush}"
                                         Margin="0,0,0,10"/>
                            <TextBlock Text="Your Gemini API key is stored securely. Get your key from https://aistudio.google.com/app/apikey" 
                                       FontSize="11" 
                                       Foreground="{DynamicResource SecondaryTextBrush}" 
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,15"/>
                        </StackPanel>
                        
                        <!-- Localhost Section -->
                        <StackPanel x:Name="LocalhostSection" Margin="0,0,0,10" Visibility="Collapsed">
                            <TextBlock Text="Localhost URL" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBox x:Name="LocalhostUrlTextBox" 
                                     FontSize="12"
                                     Padding="8,6"
                                     Background="{DynamicResource CardBackgroundBrush}"
                                     BorderBrush="{DynamicResource BorderBrush}"
                                     BorderThickness="1"
                                     Foreground="{DynamicResource PrimaryTextBrush}"
                                     Margin="0,0,0,10"/>
                            <TextBlock Text="URL for your local model server (e.g., http://localhost:11434 for Ollama)" 
                                       FontSize="11" 
                                       Foreground="{DynamicResource SecondaryTextBrush}" 
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,15"/>
                        </StackPanel>
                        
                        <Button Content="Save API Settings" 
                                Width="140" 
                                Height="32"
                                Background="{DynamicResource AccentBrush}"
                                Foreground="{DynamicResource AccentForegroundBrush}"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="SaveApiSettingsButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- Appearance Settings -->
                <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Appearance" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBlock Text="Choose how FileWise looks. Theme changes apply immediately."
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="0,0,0,15"/>
                        
                        <StackPanel>
                            <RadioButton x:Name="LightThemeRadio"
                                         Content="Light Theme"
                                         GroupName="ThemePreference"
                                         FontSize="12"
                                         Margin="0,0,0,8"
                                         Foreground="{DynamicResource PrimaryTextBrush}"
                                         Checked="ThemeRadio_Checked"/>
                            <RadioButton x:Name="DarkThemeRadio"
                                         Content="Dark Theme"
                                         GroupName="ThemePreference"
                                         FontSize="12"
                                         Margin="0,0,0,8"
                                         Foreground="{DynamicResource PrimaryTextBrush}"
                                         Checked="ThemeRadio_Checked"/>
                            <RadioButton x:Name="SystemThemeRadio"
                                         Content="Follow System Theme"
                                         GroupName="ThemePreference"
                                         FontSize="12"
                                         Margin="0,0,0,8"
                                         Foreground="{DynamicResource PrimaryTextBrush}"
                                         Checked="ThemeRadio_Checked"/>
                        </StackPanel>
                        
                        <TextBlock Text="Tip: Choose “Follow System” to automatically switch when Windows changes between light and dark mode."
                                   FontSize="11"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Indexing Settings -->
                <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Indexing Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        
                        <TextBlock Text="Chunk Size" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBox x:Name="ChunkSizeTextBox" 
                                 FontSize="12"
                                 Padding="8,6"
                                 Background="{DynamicResource CardBackgroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 BorderThickness="1"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="Number of characters per text chunk (default: 1000)" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                   Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Max Concurrent Files" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBox x:Name="MaxConcurrentFilesTextBox" 
                                 FontSize="12"
                                 Padding="8,6"
                                 Background="{DynamicResource CardBackgroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 BorderThickness="1"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="Maximum number of files to process simultaneously (default: 5)" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                   Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Max Concurrent PDFs" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBox x:Name="MaxConcurrentPdfsTextBox" 
                                 FontSize="12"
                                 Padding="8,6"
                                 Background="{DynamicResource CardBackgroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 BorderThickness="1"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="Maximum number of PDFs to process simultaneously (default: 2)" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                   Margin="0,0,0,15"/>
                        
                        <Button Content="Save Indexing Settings" 
                                Width="160" 
                                Height="32"
                                Background="{DynamicResource AccentBrush}"
                                Foreground="{DynamicResource AccentForegroundBrush}"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="SaveIndexingSettingsButton_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close" 
                        Width="100" 
                        Height="30" 
                        Background="{DynamicResource AccentBrush}"
                        Foreground="{DynamicResource AccentForegroundBrush}"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Console Log (Hidden by default) -->
        <Border Grid.Row="3" 
                x:Name="ConsoleLogBorder"
                Margin="10" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                Background="{DynamicResource CardBackgroundBrush}"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="{DynamicResource CardBackgroundBrush}" Padding="10,8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                    <TextBlock Text="Console Log" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"/>
                </Border>
                
                <ScrollViewer Grid.Row="1" x:Name="ConsoleScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="ConsoleTextBox" 
                         IsReadOnly="True" 
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="11"
                         Background="{DynamicResource ConsoleBackgroundBrush}"
                         Foreground="{DynamicResource ConsoleForegroundBrush}"
                         BorderThickness="0"
                         Padding="10"/>
            </ScrollViewer>
                
                <Border Grid.Row="2" Background="{DynamicResource CardBackgroundBrush}" Padding="10" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                    <Button Content="Clear Log" 
                            Width="100" 
                            Height="30" 
                            Background="{DynamicResource AccentBrush}"
                            Foreground="{DynamicResource AccentForegroundBrush}"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ClearLogButton_Click"/>
        </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
